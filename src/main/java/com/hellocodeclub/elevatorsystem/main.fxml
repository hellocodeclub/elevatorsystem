<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.image.ImageView?>

<AnchorPane style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hellocodeclub.elevatorsystem.AppController">
    <children>

                <HBox>
                    <VBox prefHeight="41.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                        <children>
                            <ImageView fx:id="floor4" onMouseClicked="#moveLiftTo4Floor"/>
                            <ImageView fx:id="floor3" onMouseClicked="#moveLiftTo3Floor"/>
                            <ImageView fx:id="floor2" onMouseClicked="#moveLiftTo2Floor"/>
                            <ImageView fx:id="floor1" onMouseClicked="#moveLiftTo1Floor"/>
                            <ImageView fx:id="floor0" onMouseClicked="#moveLiftTo0Floor"/>
                        </children>
                    </VBox>
                    <Canvas fx:id="elevatorCanvas" height="500.0" width="400.0"/>
                </HBox>

    </children>
</AnchorPane>